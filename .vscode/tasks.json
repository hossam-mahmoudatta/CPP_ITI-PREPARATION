{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "g++",
      "args": [
          "-I", "include",
          "-o", "outputFile",
          "src/main.cpp",
          "src/Complex/Complex.cpp"
      ],
      "group": {
          "kind": "build",
          "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}/CH01_EX01_OOP_MAHARATECH"  // Set this to your project directory
      },
      "problemMatcher": ["$gcc"],
      "detail": "Generated task by VS Code"
    },
    {
      "label": "run",
      "type": "shell",
      "command": "${workspaceFolder}/CH01_EX01_OOP_MAHARATECH/outputFile", // Adjust the path if necessary
      "group": "none",
      "options": {
        "cwd": "${workspaceFolder}/CH01_EX01_OOP_MAHARATECH" // Set working directory to project folder
      },
      "detail": "Run the output executable"
    },
    {
      "type": "cppbuild",
      "label": "C/C++: g++ build active file",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    },
    {
      "type": "shell",
      "label": "C/C++: g++.exe build active file",
      "command": "C:\\PATH_PROGRAMS\\bin\\g++.exe",
      "args": [
        // "-fdiagnostics-color=always",
        // "-g",
        // "${file}",
        // "-o",
        // "${fileDirname}\\${fileBasenameNoExtension}.exe"
        "-g",
        "src/main.cpp",
        "src/Complex/Complex.cpp",
        "-o",
        "build/ComplexApp"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "compiler: C:\\PATH_PROGRAMS\\bin\\g++.exe"
    }
  ]
}